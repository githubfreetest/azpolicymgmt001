{
    "$schema": "https://schema.management.azure.com/schemas/2019-08-01/managementGroupDeploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "targetMG": {
            "type": "string",
            "metadata": {
                "description": "Target Management Group"
            }
        },
        "policyDefinitionName": {
            "type": "string",
            "metadata": {
                "description": "Policy definition name"
            }
        },
        "allowedLocations": {
            "type": "array",
            "defaultValue": [
                "eastasia",
                "australiasoutheast",
                "australiacentral"
            ],
            "metadata": {
                "description": "An array of the allowed locations, all other locations will be audited by the created policy."
            }
        }
    },
    "variables": {
        "mgScope": "[concat('Microsoft.Management/managementGroups/', parameters('targetMG'))]"
    },
    "resources": [
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2019-10-01",
            "name": "nestedDeployment",
            "scope": "[variables('mgScope')]",
            "location": "WestEurope",
            "properties": {
                "mode": "Incremental",
                "template": {
                    "$schema": "https://schema.management.azure.com/schemas/2019-08-01/managementGroupDeploymentTemplate.json#",
                    "contentVersion": "1.0.0.0",
                    "resources": [
                        {
                            "type": "Microsoft.Authorization/policyDefinitions",
                            "name": "[parameters('policyDefinitionName')]",
                            "apiVersion": "2019-09-01",
                            "properties": {
                                "policyType": "Custom",
                                "mode": "All",
                                "parameters": {},
                                "policyRule": {
                                    "if": {
                                        "not": {
                                            "field": "location",
                                            "in": "[parameters('allowedLocations')]"
                                        }
                                    },
                                    "then": {
                                        "effect": "audit"
                                    }
                                }
                            }
                        }
                    ]
                }
            }
        }
    ],
    "outputs": {}
}
